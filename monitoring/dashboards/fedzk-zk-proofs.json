{
  "dashboard": {
    "id": null,
    "title": "FEDzk ZK Proof Monitoring",
    "tags": ["fedzk", "zk-proofs", "cryptography", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "ZK Proof Operations",
        "type": "row",
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Proof Generation Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(fedzk_zk_proof_generation_total[5m])",
            "legendFormat": "{{circuit_type}} - {{success}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 1
        },
        "yaxes": [
          {
            "unit": "ops",
            "label": "Proofs/sec"
          },
          {
            "unit": "short"
          }
        ]
      },
      {
        "id": 3,
        "title": "Proof Generation Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(fedzk_zk_proof_generation_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile - {{circuit_type}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(fedzk_zk_proof_generation_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile - {{circuit_type}}",
            "refId": "B"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 1
        },
        "yaxes": [
          {
            "unit": "seconds",
            "label": "Duration"
          },
          {
            "unit": "short"
          }
        ]
      },
      {
        "id": 4,
        "title": "Proof Verification Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(fedzk_zk_proof_verification_total[5m])",
            "legendFormat": "{{circuit_type}} - {{success}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 9
        },
        "yaxes": [
          {
            "unit": "ops",
            "label": "Verifications/sec"
          },
          {
            "unit": "short"
          }
        ]
      },
      {
        "id": 5,
        "title": "Proof Size Distribution",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(fedzk_zk_proof_size_bytes_bucket[5m]))",
            "legendFormat": "95th percentile - {{circuit_type}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(fedzk_zk_proof_size_bytes_bucket[5m]))",
            "legendFormat": "50th percentile - {{circuit_type}}",
            "refId": "B"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 9
        },
        "yaxes": [
          {
            "unit": "bytes",
            "label": "Proof Size"
          },
          {
            "unit": "short"
          }
        ]
      },
      {
        "id": 6,
        "title": "Circuit Complexity",
        "type": "table",
        "targets": [
          {
            "expr": "fedzk_zk_circuit_complexity",
            "legendFormat": "{{circuit_type}} - {{metric}}",
            "refId": "A",
            "instant": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 17
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left"
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Proof Success Rate",
        "type": "singlestat",
        "targets": [
          {
            "expr": "rate(fedzk_zk_proof_generation_total{success=\"true\"}[5m]) / rate(fedzk_zk_proof_generation_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 17
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "orange",
                  "value": 95
                },
                {
                  "color": "green",
                  "value": 99
                }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Verification Success Rate",
        "type": "singlestat",
        "targets": [
          {
            "expr": "rate(fedzk_zk_proof_verification_total{success=\"true\"}[5m]) / rate(fedzk_zk_proof_verification_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 17
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "orange",
                  "value": 95
                },
                {
                  "color": "green",
                  "value": 99
                }
              ]
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    },
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
}
