{
  "dashboard": {
    "id": null,
    "title": "FEDzk Overview Dashboard",
    "tags": ["fedzk", "federated-learning", "zk-proofs", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "row",
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Active Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "fedzk_active_connections",
            "legendFormat": "{{component}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 1
        },
        "yaxes": [
          {
            "unit": "short",
            "label": "Connections"
          },
          {
            "unit": "short"
          }
        ]
      },
      {
        "id": 3,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "fedzk_memory_usage_bytes{type=\"used\"}",
            "legendFormat": "Used Memory",
            "refId": "A"
          },
          {
            "expr": "fedzk_memory_usage_bytes{type=\"available\"}",
            "legendFormat": "Available Memory",
            "refId": "B"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 1
        },
        "yaxes": [
          {
            "unit": "bytes",
            "label": "Memory"
          },
          {
            "unit": "short"
          }
        ]
      },
      {
        "id": 4,
        "title": "CPU Usage",
        "type": "singlestat",
        "targets": [
          {
            "expr": "fedzk_cpu_usage_percent",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 8,
          "x": 0,
          "y": 9
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "orange",
                  "value": 70
                },
                {
                  "color": "red",
                  "value": 90
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(fedzk_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 16,
          "x": 8,
          "y": 9
        },
        "yaxes": [
          {
            "unit": "reqps",
            "label": "Requests/sec"
          },
          {
            "unit": "short"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    },
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
}
