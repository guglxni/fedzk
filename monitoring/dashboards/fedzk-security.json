{
  "dashboard": {
    "id": null,
    "title": "FEDzk Security Monitoring",
    "tags": ["fedzk", "security", "authentication", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Security Overview",
        "type": "row",
        "gridPos": {
          "h": 1,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Authentication Success Rate",
        "type": "singlestat",
        "targets": [
          {
            "expr": "rate(fedzk_auth_attempts_total{success=\"true\"}[5m]) / rate(fedzk_auth_attempts_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 8,
          "x": 0,
          "y": 1
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "orange",
                  "value": 95
                },
                {
                  "color": "green",
                  "value": 99
                }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "TLS Handshake Success Rate",
        "type": "singlestat",
        "targets": [
          {
            "expr": "rate(fedzk_tls_handshakes_total{success=\"true\"}[5m]) / rate(fedzk_tls_handshakes_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 8,
          "x": 8,
          "y": 1
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "orange",
                  "value": 95
                },
                {
                  "color": "green",
                  "value": 99
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Security Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(fedzk_security_events_total[5m])",
            "legendFormat": "{{event_type}} - {{severity}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 16,
          "x": 0,
          "y": 5
        },
        "yaxes": [
          {
            "unit": "ops",
            "label": "Events/sec"
          },
          {
            "unit": "short"
          }
        ]
      },
      {
        "id": 5,
        "title": "Authentication Attempts",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(fedzk_auth_attempts_total[5m])",
            "legendFormat": "{{method}} - {{success}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 13
        },
        "yaxes": [
          {
            "unit": "ops",
            "label": "Attempts/sec"
          },
          {
            "unit": "short"
          }
        ]
      },
      {
        "id": 6,
        "title": "Encryption Operations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(fedzk_encryption_operations_total[5m])",
            "legendFormat": "{{operation}} - {{algorithm}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 13
        },
        "yaxes": [
          {
            "unit": "ops",
            "label": "Operations/sec"
          },
          {
            "unit": "short"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    },
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
}
